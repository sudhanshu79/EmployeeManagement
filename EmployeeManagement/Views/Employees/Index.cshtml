@model List<Employee>
@{
    ViewBag.Title = "Listing Page";
}
<div class="card-deck">

    @foreach (var employee in Model)
    {
        var photoPath = "~/images/" + (employee.PhotoPath ?? "no-img.jpg");
        <div class="card m-3" style="min-width:300px;">
            <div class="card-header"><h3>@employee.EmployeeName</h3></div>
            <img class="card-img-top employee-photo" src="@photoPath" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="employees" asp-action="details" asp-route-id="@employee.EmployeeId" class="btn btn-primary m-1">View</a>
                <a asp-controller="employees" asp-action="editemployee" asp-route-id="@employee.EmployeeId" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }

</div>
@section Scripts{
    <script src="~/js/EmployeesScripts.js"></script>
}
@model EmployeeViewModel

@{ 
    ViewBag.Title = "Details";
    var imgPath = "~/images/" + (Model.Employee.PhotoPath ?? "no-img.jpg");
}

<div class=" row justify-content-center m-3" >
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.EmployeeName</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top employee-photo" src="@imgPath" asp-append-version="true" />

                <h4>Designation: @Model.Employee.EmployeeEmail</h4>
                <h4>Dept: @Model.Employee.EmployeeDept</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="employees" asp-action="index" class="btn btn-primary m-1">Back</a>
                <a asp-controller="employees" asp-action="editemployee" asp-route-id="@Model.Employee.EmployeeId" class="btn btn-secondary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    </div>
</div>

